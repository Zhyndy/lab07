<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText android:id="@+id/edUsername" android:minHeight="48dp" android:hint="Username" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <EditText android:id="@+id/edPassword"  android:minHeight="48dp" android:hint="Password" android:inputType="textPassword" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <EditText android:id="@+id/edConfirmPassword"  android:minHeight="48dp" android:hint="Confirm Password" android:inputType="textPassword" android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <Button android:id="@+id/btnCreateUser" android:text="Register" android:layout_width="match_parent" android:layout_height="wrap_content"/>
</LinearLayout>
